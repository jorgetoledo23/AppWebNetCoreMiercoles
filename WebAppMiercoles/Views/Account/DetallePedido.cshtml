@model DetallePedidoViewModel

@{
    ViewData["Title"] = "Mis Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-cascade narrower view view-cascade gradient-card-header blue-gradient narrower py-2 mb-3 d-flex justify-content-between align-items-center">
    <h2 href="" class="white-text mx-3">Detalle Pedido</h2>
</div>

<hr />

<hr />

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Pedido: </strong>@Model.Pedido.PedidoId</li>
        <li class="list-group-item"><strong>Fecha: </strong>@Model.Pedido.Fecha</li>
        <li class="list-group-item"><strong>Estado: </strong>En Preparacion</li>
        <li class="list-group-item"><strong>Total: </strong>@string.Format(new System.Globalization.CultureInfo("es-CL"), "{0:C}", @Model.Pedido.Total)</li>
    </ul>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <td>#</td>
            <td>Producto</td>
            <td>Precio Unitario</td>
            <td>Cantidad</td>
            <td>Subtotal</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaDetalle)
        {
            <tr>
                <td>#</td>
                <td>@item.Producto.Nombre</td>
                <td>@string.Format(new System.Globalization.CultureInfo("es-CL"), "{0:C}", item.Producto.Precio)</td>
                <td>@item.Cantidad</td>
                <td>@string.Format(new System.Globalization.CultureInfo("es-CL"), "{0:C}", item.Cantidad * item.Producto.Precio)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class="text-right" colspan="4">
                <strong>Total: </strong>
            </td>
            <td class="text-left">
                $ @string.Format(new System.Globalization.CultureInfo("es-CL"), "{0:C}",
Model.Pedido.Total)
            </td>
        </tr>
    </tfoot>
</table>